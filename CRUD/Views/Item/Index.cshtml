@model IEnumerable<CRUD.Models.Item>

    <div class="container" p-3>
        <div class="row pt-4">
            <h2 class="col-6">ElfBar list</h2>
        </div>
        <div class="col-6">
            <a class="btn-dark" asp-area="" asp-controller="Item" asp-action="Create">Create new item</a>             
        </div>
    </div>

@if (Model.Count() > 0)
{
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Amount
            </th>
            <th>
                Price
            </th>
            <th>
                Sell price
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            @*@using (Html.BeginForm("Sell", "Item", FormMethod.Post))
            {*@
                <tr>
                    <td width="7%"><input value="@item.Id" name="Id" type="hidden"/> </td>
                    <td width="17%">@item.Name</td>
                    <td width="17%">@item.Amount</td>
                    <td width="17%">@item.Price</td>
                    <td width="17%">@item.SellPrice</td>
                    @*<td class="btn-success" width="17%"><input type="submit" /></td>*@
                </tr>
                
            }
        </tbody>
</table>  
} 

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            Money turnover
        </tr>
        <tr>
            Profit
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@ViewBag.Sum</td>
        </tr>    
        
     </tbody>
    </table>